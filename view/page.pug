doctype html

html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="/page.css")
        script(src="/script.js") 
    body 
            header
            nav
                h1
                    span.welcom Welcome 
                    span.user User
                ul
                    li
                        img(src="https://www.pngkit.com/png/full/253-2539674_career-man.png", alt="")
            
            main
                h1.alltodo All ToDos
                div.tasks
                    
                   each item in data
                    article
                    - id = item.id

                      div.insidetask
                        div.insidetask1 
                                input(type="checkbox", name="" ,id="click")
                                h2.click1= item.title || "No title"
                        div.insidetask2 
                            a(href="/update/" + id) Update
                            
                            form(action="/delete/" + id, method="POST")
                              button(type="submit").delete Delete
                     
                       
                div.add 
                    form(action="/add" , method="POST")
                      input(type="text", name="title", placeholder="add task")
                      button(type="submit") Add      

           
                